/* Buttons CSS */

.button {
  background-color: #845EC2;
  /* border: none; */
  border: 2px solid #4B4453; /* Green */
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  border-radius: 12px;
}

.button span {
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
}

.button span.right:after {
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}

.button:hover span.right {
  padding-right: 25px;
}

.button:hover span.right:after {
  opacity: 1;
  right: 0;
}

.button span.left:after {
  content: '\00ab';
  position: absolute;
  opacity: 0;
  top: 0;
  left: -20px;
  transition: 0.5s;
}

.button:hover span.left {
  padding-left: 25px;
}



.button:hover span.left:after {
  opacity: 1;
  left: 0;
}



.button span.middle {
	text-align: center;
	font-size: 16px;
	opacity: 1;
	cursor: pointer;
}

.button:hover span.middle{
	opacity: 0.5
	}

